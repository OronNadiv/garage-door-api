#!/bin/bash

MIGRATIONS_FILE=$PWD/bin/migrate.js

echo $MIGRATIONS_FILE

if test $1 = "up"
then
  node ./node_modules/.bin/knex migrate:latest --debug --knexfile $MIGRATIONS_FILE
elif test $1 = "down"
then
  node ./node_modules/.bin/knex migrate:rollback --debug --knexfile $MIGRATIONS_FILE
elif test $1 = "make"
then
  node ./node_modules/.bin/knex migrate:make --debug --knexfile $MIGRATIONS_FILE $2
else
  echo "invalid migration command"
fi
